<div class="row-fluid">
	<div class="span6 offset3">
		<div id="articles">

			<h2>All articles</h2>

			<table id="all_posts">
				<tr>
					<th>Author</th>
					<th>Title</th>
					<th>Tags:</th>
					<th>Body</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>	
				<% @posts.each do |post| %>
				<tr>
					<td><%= post.user_id %></td>
					<td><%= post.title %></td>
					<td><%= post.tag %></td>
					<td><%= post.body %></td>
					<td><%= link_to 'View post', post %></td>
					<td><%= link_to 'Edit post', edit_post_path(post) %></td>
					<td><%= link_to 'Delete post', post, :confirm => 'Please confirm you want to delete?', :method => :delete %></td>
				</tr>
				<% end %>
			</table>
			
			<br />
		</div>
	</div>
	<div class="span2">
		<button class="btn">
			<%= link_to "new post", "posts/new" %>
		</button>
		<button class="btn">
			<%= link_to "view all users", "user" %>
		</btn>
	</div>
</div>