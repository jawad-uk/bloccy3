<%= form_for @user do |f| %>	
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.text_field :password %>	

	<%= f.label :bio %>
	<%= f.text_area :bio %>

	<%= f.label :twitter %>
	<%= f.text_field :twitter %>

	<%= f.label :website %>
	<%= f.text_field :website %>

	<br />
	<%= f.submit "Submit" %>
<% end %>